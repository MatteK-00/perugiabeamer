\usetheme{PerugiaB}
\let\oldframetitle\frametitle
\renewcommand{\frametitle}[1]{
	\AtBeginSection[]
	{
   		\begin{frame}
      			\frametitle{Outline}
       			\tableofcontents[currentsection]
   		\end{frame}
	}
	\oldframetitle{#1}
}

\newcommand{\addsectionname}{
	\let\frametitle\oldframetitle
	\renewcommand{\frametitle}[1]{
		\oldframetitle{\begin{small}$\hookrightarrow$\insertsection \\\end{small}\vspace{-2mm} ##1}
	}
}


